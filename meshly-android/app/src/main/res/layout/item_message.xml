<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_message_to_ll">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:id="@+id/item_message_to_triangle_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_icon"
                android:layout_margin="5dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/item_message_to_time_tv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_triangle" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message"
            android:id="@+id/item_message_to_text"
            android:layout_gravity="right"
            android:background="@drawable/ic_user_message"
            android:textSize="16sp"
            android:textColor="#5A6F75"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_message_me_ll">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:id="@+id/item_message_me_triangle_ll">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_triangle_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/item_message_me_time_tv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_icon"
                android:layout_margin="5dp"
                android:layout_gravity="center" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message"
            android:id="@+id/item_message_me_text"
            android:layout_gravity="left"
            android:background="@drawable/ic_user_message_left"
            android:textSize="16sp"
            android:textColor="#B0BEC2"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="listener"
            type="com.vakoms.meshly.fragments.login.SignupEditFragment" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/signup_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.vakoms.meshly.views.font.CustomTextView
            app:custom_font="@string/font_helvetica_regular"
            android:onClick="@{listener.onDoneClicked}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/done"
            android:textColor="#65d5fe"
            android:textSize="22sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/signup_top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_top_bar"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <com.facebook.drawee.view.SimpleDraweeView

                    android:id="@+id/ivPicture"
                    android:onClick="@{listener.onPictureClicked}"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    app:roundAsCircle="true"
                    app:backgroundImage="@color/white_transparent_25"
                    />

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_thin"
                    android:id="@+id/fragment_edit_photo_title_tv"
                    style="@style/AppTheme.EditProfileTextView"
                    android:text="@string/change"
                    android:layout_toRightOf="@id/ivPicture"
                    android:textSize="10sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_25" />

            <LinearLayout
                style="@style/AppTheme.LinearLayoutPrefferences">

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_regular"
                    style="@style/AppTheme.EditProfileTextView"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/name" />

                <com.vakoms.meshly.views.font.CustomEditText
                    app:custom_edit_text_font="@string/font_helvetica_thin"
                    android:id="@+id/etName"
                    style="@style/AppTheme.EditTextNoUnderline"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:layout_weight="5"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_25" />

            <LinearLayout
                style="@style/AppTheme.LinearLayoutPrefferences">

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_regular"
                    style="@style/AppTheme.EditProfileTextView"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/company" />

                <com.vakoms.meshly.views.font.CustomEditText
                    app:custom_edit_text_font="@string/font_helvetica_thin"
                    android:id="@+id/etCompany"
                    style="@style/AppTheme.EditTextNoUnderline"
                    android:layout_width="0dp"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_25" />

            <LinearLayout
                style="@style/AppTheme.LinearLayoutPrefferences">

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_regular"

                    style="@style/AppTheme.EditProfileTextView"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/position" />

                <com.vakoms.meshly.views.font.CustomEditText
                    app:custom_edit_text_font="@string/font_helvetica_thin"
                    android:id="@+id/etPosition"
                    style="@style/AppTheme.EditTextNoUnderline"
                    android:layout_width="0dp"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                     />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_25" />

            <LinearLayout
                style="@style/AppTheme.LinearLayoutPrefferences">

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_regular"

                    style="@style/AppTheme.EditProfileTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/industries" />

                <com.vakoms.meshly.views.font.CustomTextView
                    app:custom_font="@string/font_helvetica_thin"
                    android:id="@+id/tvInterests"
                    style="@style/AppTheme.EditTextNoUnderline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{listener.onIndustriesClicked}"
                    android:src="@drawable/arrow_white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_25" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>

</layout>
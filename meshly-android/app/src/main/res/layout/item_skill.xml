<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_skill"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_skill_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="16sp" />

    <com.vakoms.meshly.views.font.TextViewCustomFont
        style="@style/AwesomeRemove"
        android:id="@+id/item_skill_cancel_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/fa_remove"
        android:textSize="16sp" />

</RelativeLayout>
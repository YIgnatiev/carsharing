<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <com.vakoms.meshly.views.font.CustomTextView
            android:id="@+id/tvName_itemAttending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_font="@string/font_helvetica_light"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"

            android:singleLine="true"
            android:text="Sambir, Ukraine"
            android:textColor="@color/white"
            android:textSize="17sp" />
        <com.vakoms.meshly.views.font.CustomTextView
            android:id="@+id/tvWebsite_itemAttending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:autoLink="web"
            app:custom_font="@string/font_helvetica_thin"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:text="www.slush2015.com"
            android:textColor="@color/blue"
            android:textSize="17sp" />



    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/ivArrow_ItemAttending"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right"
        android:paddingLeft="60dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"/>





        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/white_transparent_25"/>

</RelativeLayout>
<layout>

    <data>
        
        <variable
            name="listener"
            type="com.vakoms.meshly.fragments.opportunities.WallFragment"/>
    </data>
    
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
            android:id="@+id/rvOpportunities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/vwBackgroundToolbar"
            android:alpha="0"
            android:background="@color/black_transparent"/>

        <ImageView
            style="@style/AppTheme.Icon"
            android:onClick="@{listener.onMenuButton}"
            android:src="@drawable/ic_menu1" />








            <com.vakoms.meshly.views.font.CustomTextView
                app:custom_font="@string/font_helvetica_regular"
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/opportunities"
                android:textColor="@color/white"
                android:textSize="19sp"/>


        <ImageView
            style="@style/AppTheme.IconRight"
            android:layout_alignParentRight="true"
            android:onClick="@{listener.onMyOpportunities}"
            android:src="@drawable/ic_plus" />




    <com.vakoms.meshly.views.font.CustomTextView
        android:visibility="gone"
        app:custom_font="@string/font_helvetica_thin"
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No deals"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white_transparent_50"
        android:textSize="30sp" />
</RelativeLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="listener"
            type="com.vakoms.meshly.fragments.edit_user.EditPrivacyFragment" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/privacy_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlHideFromEveryOne"
                android:onClick="@{listener.onHideFromEveryOne}"
                style="@style/AppTheme.LinearLayoutPrefferences">


                <com.vakoms.meshly.views.font.CustomTextView
                    style="@style/AppTheme.EditProfileTextView"
                    android:text="@string/hide_from_everyone"
                    app:custom_font="@string/font_helvetica_regular" />

                <ImageView
                    android:id="@+id/ivHideFromEveryone"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:paddingLeft="60dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:src="@drawable/ic_right_white" />

                <com.vakoms.meshly.views.font.CustomTextView
                    android:id="@+id/tvHiddenFromEveryone"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivHideFromEveryone"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    app:custom_font="@string/font_helvetica_regular" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_50" />

            <com.vakoms.meshly.views.font.CustomTextView
                style="@style/AppTheme.EditProfileHeaderTextView"
                android:layout_marginTop="60dp"
                android:text="@string/sharing_settings"
                app:custom_font="@string/font_helvetica_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_50" />

            <RelativeLayout
                android:id="@+id/rlTimestamp"
                android:onClick="@{listener.onTimeStamp}"
                style="@style/AppTheme.LinearLayoutPrefferences">


                <com.vakoms.meshly.views.font.CustomTextView
                    style="@style/AppTheme.EditProfileTextView"
                    android:text="@string/timestamp"
                    app:custom_font="@string/font_helvetica_regular" />

                <ImageView
                    android:id="@+id/ivTimestamp"
                    android:layout_width="@dimen/arrow_dimen"
                    android:layout_height="@dimen/arrow_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_right_white" />

                <com.vakoms.meshly.views.font.CustomTextView
                    android:id="@+id/tvTimestampValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivTimestamp"
                    android:gravity="center"
                    android:text="@string/everyone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    app:custom_font="@string/font_helvetica_regular" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_50" />

            <RelativeLayout
                android:id="@+id/rlLocation"
                android:onClick="@{listener.onLocation}"
                style="@style/AppTheme.LinearLayoutPrefferences">

                <com.vakoms.meshly.views.font.CustomTextView
                    android:id="@+id/location_title_tv"
                    style="@style/AppTheme.EditProfileTextView"
                    android:text="@string/location"
                    app:custom_font="@string/font_helvetica_regular" />

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="@dimen/arrow_dimen"
                    android:layout_height="@dimen/arrow_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_right_white" />

                <com.vakoms.meshly.views.font.CustomTextView
                    android:id="@+id/tvLocationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivLocation"
                    android:gravity="center"
                    android:text="@string/everyone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    app:custom_font="@string/font_helvetica_regular" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_50" />

            <RelativeLayout
                android:onClick="@{listener.onMessaging}"
                android:id="@+id/rlMessaging"
                style="@style/AppTheme.LinearLayoutPrefferences">


                <com.vakoms.meshly.views.font.CustomTextView
                    style="@style/AppTheme.EditProfileTextView"
                    android:text="@string/messaging"
                    app:custom_font="@string/font_helvetica_regular" />

                <ImageView
                    android:id="@+id/ivMessaging"
                    android:layout_width="@dimen/arrow_dimen"
                    android:layout_height="@dimen/arrow_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_right_white" />

                <com.vakoms.meshly.views.font.CustomTextView
                    android:id="@+id/tvMessagingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivMessaging"
                    android:gravity="center"
                    android:text="@string/everyone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    app:custom_font="@string/font_helvetica_regular" />


            </RelativeLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_transparent_50" />

            <com.vakoms.meshly.views.font.CustomTextView
                android:id="@+id/tvPrivacyFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/def_icon_padding"
                android:padding="@dimen/def_icon_padding"
                android:text="@string/privacy_hint"
                android:textColor="@color/white_transparent_50"
                android:textSize="@dimen/privacy_hint_text_size"
                app:custom_font="@string/font_helvetica_regular" />

        </LinearLayout>

        <com.vakoms.meshly.views.font.CustomTextView
            android:id="@+id/tvPrivacy"
            android:onClick="@{listener.onPrivacy}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/privacy_container"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/def_icon_padding"
            android:text="@string/view_privacy_policy"
            android:textColor="@android:color/holo_blue_dark"
            app:custom_font="@string/font_helvetica_thin" />


    </RelativeLayout>
</layout>
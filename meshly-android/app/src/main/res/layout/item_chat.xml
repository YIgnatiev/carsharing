<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <data >

        <variable
            name="message"
            type="com.vakoms.meshly.models.chat.MessageBody"/>

        <variable
            name="listener"
            type="com.vakoms.meshly.interfaces.InboxItemListener"/>

        <variable
            name="isMy"
            type="Boolean"/>


        <import type="android.view.View"/>
        <import type="com.vakoms.meshly.models.NewUser"/>


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick='@{listener.onMessageClick}'>


        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

            app:setIsNew='@{message}'
            android:background="@drawable/background_blue_dot"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivPhoto"
            app:imageUrl='@{message.user.picture}'
            android:onClick='@{listener.onUserClick}'
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:roundAsCircle="true" />

        <com.vakoms.meshly.views.font.CustomTextView
            app:custom_font="@string/font_helvetica_regular"
            android:id="@+id/tvUserName"
            android:text='@{message.user.username}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPhoto"
            android:layout_toEndOf="@+id/ivPhoto"
            android:layout_toRightOf="@+id/ivPhoto"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <com.vakoms.meshly.views.font.CustomTextView
            app:custom_font="@string/font_helvetica_regular"
            android:id="@+id/tvMessage"
            android:text='@{isMy ? "MESSAGE SENT" : message.lastMessage.message}'
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivPhoto"
            android:layout_below="@+id/tvTime"
            android:layout_toEndOf="@+id/ivPhoto"
            android:layout_toRightOf="@+id/ivPhoto"
            android:singleLine="true"
            android:textSize="15sp" />

        <com.vakoms.meshly.views.font.CustomTextView
            app:custom_font="@string/font_helvetica_regular"
            android:id="@+id/tvTime"
            app:setTime='@{message}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvMessage"
            android:layout_alignRight="@+id/tvMessage"
            android:layout_alignBottom="@+id/tvUserName"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/clock_icon_copy"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ivPhoto"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_transparent_25" />
    </RelativeLayout>
</layout>
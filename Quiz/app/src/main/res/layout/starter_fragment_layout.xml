


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4983b9"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/quiz_logo2"
        android:layout_marginBottom="70dp"
        />
    <TextView
        android:id="@+id/textView_register_StarterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ff416a8e"
        android:background="@drawable/register_button_selector"
        android:text="@string/button_register" />

    <TextView
        android:id="@+id/textView_login_StarterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/log_in_background_selector"
        android:text="@string/button_log_in" />



</LinearLayout>

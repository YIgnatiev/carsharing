<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btn_stop_service"

        android:layout_toStartOf="@+id/checkBox"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignStart="@+id/image_view" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_start_service"

        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginLeft="26dp"
        android:layout_alignTop="@+id/btn_stop_service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup2"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:id="@+id/radio_left"
                 />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center"
                android:id="@+id/radio_center"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:id="@+id/radio_right" />
        </RadioGroup>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/radioGroup"
        android:layout_toStartOf="@+id/radioGroup2"
        android:layout_alignBottom="@+id/radioGroup2"
        android:layout_alignRight="@+id/btn_stop_service"
        android:layout_alignEnd="@+id/btn_stop_service"
        android:layout_alignTop="@+id/radioGroup2"
        android:layout_alignLeft="@+id/btn_start_service"
        android:layout_alignStart="@+id/btn_start_service">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"
            android:id="@+id/radio_up"
             />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:id="@+id/radio_down" />

    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autorun"
        android:id="@+id/checkBox"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/radioGroup2"
        android:layout_alignEnd="@+id/radioGroup2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_view"
        android:src="@drawable/ic_red_circle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"/>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <pro.theboard.custom_views.CustomTextView
        app:custom_font="@string/font_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_photo_source"
        android:textColor="@color/main_font"
        android:padding="10dp"
        android:textSize="20sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"

        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imagebutton_Gallery_DialogSelectPhotoSource"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_image_background"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_gallery" />

        <pro.theboard.custom_views.CustomTextView
            app:custom_font="@string/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_from_gallery"
            android:textColor="@color/main_font" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imagebutton_Camera_DialogSelectPhotoSource"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_image_background"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_camera" />


        <pro.theboard.custom_views.CustomTextView
            app:custom_font="@string/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_a_photo"
            android:textColor="@color/main_font"

            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
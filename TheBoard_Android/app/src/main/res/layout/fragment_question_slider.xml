<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>

    <variable
        name="listener"
        type="pro.theboard.fragments.cards_fragments.CardWithSliderFragment"/>
</data>
<RelativeLayout
    style="@style/AppTheme.Card">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/llQuestionLayout"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <pro.theboard.custom_views.CustomTextView
            android:id="@+id/tvQuestion"
            style="@style/AppTheme.Question" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/card_header_margin"
        android:paddingRight="@dimen/card_header_margin">

        <pro.theboard.custom_views.CustomTextView
            android:id="@+id/tvOption1"
            style="@style/AppTheme.SliderText"
            android:text="Option1"/>

        <pro.theboard.custom_views.CustomTextView
            android:id="@+id/tvOption2"
            style="@style/AppTheme.SliderText"
            android:layout_centerHorizontal="true"
            android:text="Option12" />


        <pro.theboard.custom_views.CustomTextView
            android:id="@+id/tvOption3"
            style="@style/AppTheme.SliderText"
            android:layout_alignParentRight="true"
            android:text="Option3"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlOptionsContainer"
        android:paddingLeft="@dimen/card_header_margin"
        android:paddingRight="@dimen/card_header_margin">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/slider_circle" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/grey_circle" />

        <SeekBar
            android:id="@+id/sbRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="100"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb_white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        style="@style/AppTheme.CardBottom">


        <pro.theboard.custom_views.CustomTextView
            android:id="@+id/tvSubmit"
            android:onClick='@{listener.onAnswer}'
            style="@style/AppTheme.Button" />
    </LinearLayout>


</RelativeLayout>
</layout>
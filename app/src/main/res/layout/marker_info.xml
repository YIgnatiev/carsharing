<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="MarkerInfo">

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_info_discount">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_percent_white"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingRight="25dp"
                    android:text="@string/discount"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_discount_red_rounded"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtModel"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/black"
            android:textSize="12sp" />



            <TextView
                android:id="@+id/txtNumber"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/icon_number"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textSize="10sp" />




            <TextView
                android:id="@+id/txtColor"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/icon_brush"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="10sp" />



            <TextView
                android:drawableLeft="@drawable/icon_alarm"
                android:id="@+id/txtStartUsage"
                android:drawablePadding="5dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="10sp" />



    </LinearLayout>
</layout>
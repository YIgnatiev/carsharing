<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/card_number" />

    <EditText
        android:id="@+id/edtCardNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_number_hint"
        android:inputType="number"
        android:maxLength="16"
        android:singleLine="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/card_exp" />

    <EditText
        android:id="@+id/edtCardExp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_exp_hint"
        android:inputType="number|phone"
        android:maxLength="4"
        android:singleLine="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/card_holder_name" />

    <EditText
        android:id="@+id/edtCardHolderName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_holder_name_hint"
        android:inputType="textCapCharacters"
        android:singleLine="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/card_cvv" />

    <EditText
        android:id="@+id/edtCardCvv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_cvv_hint"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/amount" />

    <EditText
        android:id="@+id/edtAmount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount_hint"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/desc" />

    <EditText
        android:id="@+id/edtDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/desc_hint"
        android:inputType="textCapCharacters"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/payment" />
</LinearLayout>
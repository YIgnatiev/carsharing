<?xml version="1.0" encoding="utf-8"?>
                                                            

    

                 
                           
                                                          
           

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" android:tag="layout/fragment_about_fourth_0" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="300dp"
            android:layout_height="250dp" />

        <com.dd.CircularProgressButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:tag="binding_1"                 
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cpb_colorIndicator="@color/main"
            app:cpb_colorProgress="@color/cpb_white"
            app:cpb_cornerRadius="5dp"
            app:cpb_iconComplete="@drawable/ic_action_accept"
            app:cpb_selectorComplete="@drawable/complete_state_selector"
            app:cpb_selectorError="@drawable/error_state_selector"
            app:cpb_selectorIdle="@drawable/idle_state_selector"
            app:cpb_textError="@string/error"
            app:cpb_textIdle="Зарегистрироваться" />

        <TextView
            style="@style/AppTheme.TextView"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:text="Есть аккаунт?" />

        <com.dd.CircularProgressButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:tag="binding_2"              
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cpb_colorIndicator="@color/main"
            app:cpb_colorProgress="@color/cpb_white"
            app:cpb_cornerRadius="5dp"
            app:cpb_iconComplete="@drawable/ic_action_accept"
            app:cpb_selectorComplete="@drawable/complete_state_selector"
            app:cpb_selectorError="@drawable/error_state_selector"
            app:cpb_selectorIdle="@drawable/idle_state_selector"
            app:cpb_textError="@string/error"
            app:cpb_textIdle="Войти" />

        <TextView
            android:id="@+id/tvFooter"
            style="@style/AppTheme.TextView"
            android:layout_marginTop="30dp"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

         
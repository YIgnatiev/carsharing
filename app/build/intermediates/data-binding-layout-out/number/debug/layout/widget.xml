<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        style="@style/BgHeader"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/amountView"
                style="@style/AmountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/BgPanel"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_number_title" />

                        <ru.cloudpayments.sdk.view.components.CardNumberEditView
                            android:id="@+id/cardNumberView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/TextGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small"
                            android:text="@string/valid_date_title" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ru.cloudpayments.sdk.view.components.MonthChooser
                                android:id="@+id/month"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:minWidth="@dimen/padding_large" />

                            <TextView
                                style="@style/TextGray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_middle"
                                android:layout_marginRight="@dimen/padding_middle"
                                android:layout_weight="0.0"
                                android:text="/" />

                            <ru.cloudpayments.sdk.view.components.YearChooser
                                android:id="@+id/year"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:minWidth="@dimen/padding_large" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/TextGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/cvv_title" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/cvv"
                        style="@style/NumberEdit"
                        android:hint="@string/cvv_hint"
                        android:maxLength="3"
                        android:nextFocusForward="@+id/cardHolderNameView" />

                    <TextView
                        style="@style/TextGrayBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_middle"
                        android:text="@string/cvv_desc" />
                </LinearLayout>

                <TextView
                    style="@style/TextGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/holder_name_title" />

                <ru.cloudpayments.sdk.view.components.CardHolderNameEditView
                    android:id="@+id/cardHolderNameView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btnPay"
                style="@style/Button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_middle"
                android:onClick="onPay"
                android:text="@string/pay" />

            <TextView
                style="@style/SecureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secure_connection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/logo"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="@dimen/padding_middle"
                android:paddingTop="@dimen/padding_middle"
                android:text="Powered by " />
        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/E:/Projects/CloudPayments/cloudpayments.android.release/sdk/CloudPayments_AndroidSDK/res/layout/widget.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Bg">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:orientation="vertical"
        style="@style/BgHeader">

        <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
-->
        <EditText
            android:id=

                "@+id/amountView"
            style="@style/AmountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="7000,00" />

        <!--         <TextView
                     style="@style/AmountInfo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.0"
                     android:text="@string/r" />
             </LinearLayout>

             <TextView
                 android:id="@+id/descView"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/desc_title" />
     -->
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                style="@style/BgPanel">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextGray"
                            android:text="@string/card_number_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ru.cloudpayments.sdk.view.components.CardNumberEditView
                            android:id="@+id/cardNumberView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/TextGray"
                            android:text="@string/valid_date_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ru.cloudpayments.sdk.view.components.MonthChooser
                                android:id="@+id/month"
                                android:minWidth="@dimen/padding_large"
                                android:layout_weight="1.0"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/TextGray"
                                android:text="/"
                                android:layout_weight="0.0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_middle"
                                android:layout_marginRight="@dimen/padding_middle" />

                            <ru.cloudpayments.sdk.view.components.YearChooser
                                android:id="@+id/year"
                                android:layout_weight="1.0"
                                android:minWidth="@dimen/padding_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="3.5"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:paddingTop="@dimen/padding_small"
                    style="@style/TextGray"
                    android:text="@string/cvv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/cvv"
                        style="@style/NumberEdit"
                        android:hint="@string/cvv_hint"
                        android:maxLength="3"
                        android:nextFocusForward="@+id/cardHolderNameView" />

                    <TextView
                        android:paddingLeft="@dimen/padding_middle"
                        style="@style/TextGrayBlue"
                        android:text="@string/cvv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:paddingTop="@dimen/padding_small"
                    style="@style/TextGray"
                    android:text="@string/holder_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ru.cloudpayments.sdk.view.components.CardHolderNameEditView
                    android:id="@+id/cardHolderNameView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btnPay"
                style="@style/Button"
                android:onClick="onPay"
                android:layout_marginTop="@dimen/padding_middle"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:text="@string/pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/SecureTitle"
                android:text="@string/secure_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="@dimen/padding_middle"
                android:paddingBottom="@dimen/padding_middle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal|bottom"
                android:text="Powered by "
                android:drawableRight="@drawable/logo" />
        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/E:/Projects/CloudPayments/cloudpayments.android/sdk/CloudPayments_AndroidSDK/res/layout/widget.xml -->
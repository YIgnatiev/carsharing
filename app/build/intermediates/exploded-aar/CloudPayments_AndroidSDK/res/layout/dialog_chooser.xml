<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_dialog_corner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_weight="1.0"
    android:layout_margin="@dimen/padding">

    <TextView
        android:id="@+id/chooser_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/TextGray"
        android:layout_weight="0.0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"/>

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_weight="1.0">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="vertical"
            android:id="@+id/radiobuttons"
            android:scrollbars="vertical" />

    </ScrollView>

</LinearLayout><!-- From: file:/E:/Projects/CloudPayments/cloudpayments.android/sdk/CloudPayments_AndroidSDK/res/layout/dialog_chooser.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flDetail_FD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:overScrollMode="never"
    tools:context="com.maryjorapini.soulintention.fragments.DetailFragment">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->

    <TextView
            style="@style/BaseTextStyle"
            android:id="@+id/tvDetailHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hardcoded Header"
            android:textColor="#fff"
            android:background="#ff824c71"
            android:textSize="25sp"
            android:paddingLeft="@dimen/base_middle_padding"
            android:paddingRight="@dimen/base_middle_padding"
            android:paddingTop="@dimen/base_big_padding"
            android:paddingBottom="@dimen/base_big_padding"
            android:gravity="center"
            android:layout_alignParentTop="true"

            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvDetailHeader"
        android:background="#ff563a61"
        android:id="@+id/rlDetailFooter">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ivDetailFacebook"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:background="@drawable/ic_facebook_share"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ivDetailTwitter"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/ic_twitter_share"
            android:layout_toRightOf="@+id/ivDetailFacebook" />

        <RatingBar

                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbDetail"
            android:progressDrawable="@drawable/selector_rating_bar"
            android:paddingTop="10dp"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/ivDetailTwitter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ivDetailTwitter"/>


    </RelativeLayout>

    <TextView
        style="@style/BaseTextStyle"
        android:id="@+id/tvDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlDetailFooter"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:lineSpacingMultiplier="1.5"

        android:text="Good friday morning Friends ! My soul intension Good friday morning Friends ! My soul intensionGood friday morning Friends ! My soul intensionGood friday morning Friends ! My soul intensionGood friday morning Friends ! My soul intension"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November 14,2014 by Mary Jo Rapini"
        android:id="@+id/tvDetailDate"
        android:layout_below="@id/tvDetailText"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/base_middle_padding"
        android:paddingTop="@dimen/base_middle_padding"
        android:paddingBottom="50dp"/>
</RelativeLayout>

</ScrollView>

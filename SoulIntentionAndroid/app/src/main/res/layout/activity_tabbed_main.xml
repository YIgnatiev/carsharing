<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.maryjorapini.soulintention.custom_views.custom_view_pager.TabPageIndicator
        android:id="@+id/connectionTabIndicator"
        android:layout_height="wrap_content"
        android:background="#563a61"
        android:layout_width="match_parent"/>
    <com.maryjorapini.soulintention.custom_views.custom_view_pager.NonSwipeableViewPager
        android:id="@+id/vpTabs_FCND"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.maryjorapini.soulintention.custom_views.custom_view_pager.NonSwipeableViewPager>

</LinearLayout>

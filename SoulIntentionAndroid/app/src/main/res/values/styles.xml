<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="TabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>




    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/dark_purple_color</item>
    </style>


    <style name="SmallRatingBar" parent="android:Widget.Holo.RatingBar.Small">

    </style>

<style name="BaseTextStyle">
<item name="android:textColor">@color/base_text_color</item>
</style>
</resources>

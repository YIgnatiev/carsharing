<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_timer_dialog_selector"
        android:id="@+id/flTimer_DFT">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/background_timer_selector"
        android:textAllCaps="true"
        android:text="timer"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_timer_dialog_selector"
        android:id="@+id/flPosition_DFT"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/background_runner_selector"
        android:textAllCaps="true"
        android:text="position"/>
    </FrameLayout>


</LinearLayout>
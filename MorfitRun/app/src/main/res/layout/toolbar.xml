<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnActionIconLeft_T"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" android:layout_marginLeft="10dp" android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvToolbarTitle_T"
        android:textColor="@color/tool_bar_title_color"
        android:textSize="@dimen/tool_bar_text"
        android:layout_centerInParent="true"
        android:text="@string/app_name"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivActionIconRight_T"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" android:layout_marginRight="10dp" android:padding="5dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_margin="@dimen/default_margin"
            android:src="@drawable/ic_marker"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivRaceInformation" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_margin="@dimen/default_margin"
            android:src="@drawable/background_forward_button_selector"/>
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRacesTitle"
            android:textSize="@dimen/text_size_medium" android:textColor="@color/text_color_black"
            android:layout_alignTop="@+id/imageView" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRacesInfo"
            android:textSize="@dimen/text_size_micro"
            android:layout_alignBottom="@+id/imageView" android:layout_alignLeft="@+id/tvRacesTitle"
            android:layout_alignStart="@+id/tvRacesTitle"/>
</RelativeLayout>
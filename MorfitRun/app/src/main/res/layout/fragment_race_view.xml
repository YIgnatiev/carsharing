<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3" android:padding="@dimen/btn_container_padding">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:id="@+id/btnEdit_FRV" android:layout_weight="1"
                style="@style/AppTheme.Button"
                android:layout_marginRight="@dimen/small_margin"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:id="@+id/btnStart_FRV" android:layout_weight="1"
                style="@style/AppTheme.Button" android:layout_marginLeft="@dimen/small_margin"
                />
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/linearLayout3">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="@dimen/preview_map_height">
                <com.google.android.gms.maps.MapView
                          android:id="@+id/map_FRV"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        android:background="@color/color_white" android:alpha="0.7">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ivSeeOnMap_FRV" android:layout_gravity="left|center_vertical"
                            android:background="@android:drawable/ic_menu_crop"
                            android:padding="@dimen/default_padding" android:layout_margin="@dimen/default_margin"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/see_on_map"
                            android:id="@+id/tvSeeOnMap_FRV" android:layout_gravity="center"
                            android:textColor="@color/text_color_black" android:textSize="@dimen/text_size_medium"
                            android:padding="@dimen/default_padding"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvRaceDescription_FRV" android:textSize="@dimen/text_size_medium"
                        android:padding="@dimen/default_padding" android:textColor="@color/color_black"
                        android:layout_margin="@dimen/default_margin"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer"
                        android:id="@+id/tvOrganizerTitle_FRV" style="@style/AppTheme.EditText_FRV"
                        android:background="@color/color_light_gray" android:layout_below="@+id/tvRaceDescription_FRV"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule"
                        android:id="@+id/tvScheduleTitle_FRV" android:layout_below="@+id/tvOrganizerTitle_FRV"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        style="@style/AppTheme.EditText_FRV"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_run"
                        android:id="@+id/tvNextRunTitle_FRV" android:layout_below="@+id/tvScheduleTitle_FRV"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        style="@style/AppTheme.EditText_FRV" android:background="@color/color_light_gray"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deadline"
                        android:id="@+id/tvDeadlineTitle_FRV" android:layout_below="@+id/tvNextRunTitle_FRV"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        style="@style/AppTheme.EditText_FRV"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_places"
                        android:id="@+id/tvAvailablePlacesTitle_FRV" android:layout_below="@+id/tvDeadlineTitle_FRV"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        style="@style/AppTheme.EditText_FRV" android:background="@color/color_light_gray"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvOrganizer_FRV" android:layout_alignBottom="@+id/tvOrganizerTitle_FRV"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        style="@style/AppTheme.EditText_FRV" android:layout_toRightOf="@+id/tvOrganizerTitle_FRV"
                        android:layout_toEndOf="@+id/tvOrganizerTitle_FRV" android:gravity="right"
                        android:background="@color/color_light_gray"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvSchedule_FRV" android:layout_alignBottom="@+id/tvScheduleTitle_FRV"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        style="@style/AppTheme.EditText_FRV" android:layout_toRightOf="@+id/tvNextRunTitle_FRV"
                        android:layout_toEndOf="@+id/tvNextRunTitle_FRV" android:gravity="right" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAvailablePlaces_FRV" android:layout_alignBottom="@+id/tvAvailablePlacesTitle_FRV"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        style="@style/AppTheme.EditText_FRV" android:layout_toRightOf="@+id/tvAvailablePlacesTitle_FRV"
                        android:layout_toEndOf="@+id/tvAvailablePlacesTitle_FRV" android:gravity="right"
                        android:background="@color/color_light_gray"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDeadline_FRV" android:layout_alignBottom="@+id/tvDeadlineTitle_FRV"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        style="@style/AppTheme.EditText_FRV" android:layout_toRightOf="@+id/tvNextRunTitle_FRV"
                        android:layout_toEndOf="@+id/tvNextRunTitle_FRV" android:gravity="right"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNextRun_FRV" android:layout_below="@+id/tvSchedule_FRV"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        style="@style/AppTheme.EditText_FRV" android:layout_toRightOf="@+id/tvNextRunTitle_FRV"
                        android:layout_toEndOf="@+id/tvNextRunTitle_FRV" android:gravity="right"
                        android:background="@color/color_light_gray"/>
            </RelativeLayout>
            <include layout="@layout/item_footer_invite_button"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/imageView_dialog_close"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_save"
        android:id="@+id/imageView_dialog_save"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/opel"
        android:scaleType="centerInside"
        android:id="@+id/imageView_dialog_mainImage"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/detail_text_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rotate_left_btn"
            android:padding="15dp"
            android:layout_weight="1"
            android:id="@+id/imageView_dialog_rotate_left"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rotate_right_btn"
            android:padding="15dp"
            android:layout_weight="1"
            android:id="@+id/imageView_dialog_rotate_right"/>

    </LinearLayout>

</LinearLayout>
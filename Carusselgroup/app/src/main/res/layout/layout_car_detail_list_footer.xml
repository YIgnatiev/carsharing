<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_ImagePlaceholder_CarDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="@dimen/car_detail_list_item_height"
    android:background="@color/detail_item_background"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_upload"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/car_detail_list_item_imageplaceholder_text_margin_top"
        android:text="@string/car_detail_list_item_imageplaceholder_text"
        android:textColor="@color/detail_text_grey"
        android:textSize="@dimen/car_detail_list_item_imageplaceholder_text"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape android:shape="rectangle">
            <gradient android:endColor="@color/login_button_login_top_pressed"
                android:startColor="@color/login_button_login_bottom_pressed"
                android:angle="90"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/login_button_login_top"
                android:startColor="@color/login_button_login_bottom"
                android:angle="90"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</selector>
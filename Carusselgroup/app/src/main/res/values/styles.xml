<resources>
    <!--<item name="android:windowDisablePreview">true</item>-->
    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:dropDownListViewStyle">@style/AppTheme.Spinner.CustomSpinner</item>
        <item name="android:typeface">monospace</item>


        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.LoginButton" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_form_button_height</item>
        <item name="android:background">@drawable/login_green_button</item>
        <item name="android:textColor">@color/login_header_text</item>
        <item name="android:textSize">@dimen/login_form_button_text</item>
    </style>






    <style name="AppTheme.Spinner">

        <item name="android:background">@drawable/dwt_android</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:popupBackground">@drawable/login_edit_text_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:paddingTop">@dimen/search_spinner_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_spinner_padding_bottom</item>
    </style>

    <style name="AppTheme.SpinnerSmall">

        <item name="android:background">@drawable/spinner_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>

        <item name="android:popupBackground">@drawable/serch_spinner_item_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:paddingTop">@dimen/search_spinner_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_spinner_padding_bottom</item>


    </style>
    <style name="AppTheme.Spinner.CustomSpinner" parent="@android:style/Theme.Holo.Light">
        <item name="android:divider">@color/search_item_stroke</item>
        <item name="android:dividerHeight">0.3dp</item>
    </style>

    <style name="AppTheme.SearchTextView">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/search_text_color_grey_dark</item>
    </style>

</resources>
